@using Common.Helper
@using XDDEasy.Domain.ResourceAggregates
@using XDDEasy.Main.Models

@model LoginViewModel
@{
    ViewBag.Title = "Index";
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>XXX会员系统</title>
    <link rel="stylesheet" type="text/css" href="~/css/ccgs.css">
    <!--[if lt IE 9]>
    <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <link rel="stylesheet" href="~/css/nav.css">
    <script src="~/script/jquery-latest.min.js" type="text/javascript"></script>
    <script src="~/script/script.js"></script>
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
</head>
<body>
    <div id="main-hol">
        <div class="header">
            <div class="ccg-logo">
                <img src="~/img/logo.png" width="auto" height="68px" alt="CCG">
                <div id="cssmenu" class="rp_menu">
                    <div id="menu-line" style="width: 147px; left: 0px;"></div><div id="menu-button">Menu</div>
                    <ul>
                        <li class="has-sub">
                            <a href="#"><i class="fa fa-globe"></i> @EasyResource.Value("UI_LangArea")</a>
                            <ul>
                                <li>
                                    <a href="javascript:changeLocale(&#39;en_US&#39;)">
                                        <img src="~/img/en.png" width="16" height="16" alt="English">
                                        &nbsp;English
                                    </a>
                                </li>
                                <li>
                                    <a href="javascript:changeLocale(&#39;zh_CN&#39;)">
                                        <img src="~/img/cn.png" width="16" height="16" alt="Chinese Simplified">
                                        &nbsp;Chinese Simplified
                                    </a>
                                </li>
                                <li>
                                    <a href="javascript:changeLocale(&#39;ja_JP&#39;)">
                                        <img src="~/img/jp.png" width="16" height="16" alt="Japanese">
                                        &nbsp;Japanese
                                    </a>
                                </li>
                                <li>
                                    <a href="javascript:changeLocale(&#39;ko_KR&#39;)">
                                        <img src="~/img/kr.png" width="16" height="16" alt="Korean">
                                        &nbsp;Korean
                                    </a>
                                </li>
                            </ul>
                            <span class="submenu-button"></span>
                        </li>

                        <li><a href="/Account/Register"><i class="fa fa-pencil"></i> 注册</a></li>
                    </ul>
                </div>
                <div style="clear:both"></div>
            </div>
        </div>
        <div class="body-ctxt">
            <div class="login-bx">

                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {
                    <div style="padding:1em; ">
                        @Html.AntiForgeryToken()

                        <h2 style="padding: 0; margin: 0;">在线 - XXXXXX集团</h2>
                        <p style="color: #999; margin: 0; padding: 0.5em 0;">您的私人在线管理系统。</p>
                        <div style="border-bottom: 8px groove #F00; width: 100%; height: 5px; margin-bottom: 2em;"></div>

                        @Html.LabelFor(m => m.UserName)
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-bx" })

                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-bx" })

                        @Html.LabelFor(m => m.Code)
                        @Html.TextBoxFor(m => m.Code, new { @class = "form-bx" })


                        <div style="color: red;">
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "form-horizontal text-danger" })
                            <br />
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "form-horizontal text-danger" })
                            <br />
                            @Html.ValidationMessageFor(m => m.Code, "", new { @class = "form-horizontal text-danger" })
                            @Html.ValidationSummary(true, "", new { @class = "form-horizontal text-danger" })
                        </div>


                        <input type="submit" value="登录" class="sub-bt" />
                    </div>
                }
            </div>
        </div>
        <div style="clear:both;"></div>
        <br><br><br>
        <div class="footer">
            <div class="inner-foot">
                Capital Clearance LLC © Copyrights 2008. All rights reserved.
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    <script type="text/javascript">
    $(document).ready(function () {

        var lan = app.getCookie('@LangHelper.EQ_LANGUAGE_KEY');
        alert(lan);
    });


    </script>
</body>
</html>
